  "item": [
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/products?page=1&limit=20&stockStatus=low_stock",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "products"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "20"},
                {"key": "stockStatus", "value": "low_stock"}
              ]
            }
          }
        },
        {
          "name": "Create Product with Images",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "data",
                  "value": "{\"name\":\"Test Product\",\"price\":999,\"stockQuantity\":50,\"categoryId\":\"{{categoryId}}\"}",
                  "type": "text"
                },
                {
                  "key": "images",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "products"]
            }
          }
        },
        {
          "name": "Bulk Update Products",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productIds\": [\"id1\", \"id2\"],\n  \"updates\": {\n    \"featured\": true,\n    \"trending\": true\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/products/bulk-update",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "products", "bulk-update"]
            }
          }
        },
